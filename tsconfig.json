{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "module": "commonjs",
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/sauce-service",
            "allure-commandline"
        ]
    },
    "include": [
        "./config/**/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "allure-report",
        "allure-results"
    ],
}